<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}"/>
        {% endblock %}

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path ("touslivres") }}"><i class="fas fa-bookmark"></i> Litteralys</a>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path ("touslivres") }}">Livres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path ("tousgenres") }}">Genres</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path ("ajouterlivre") }}">Ajouter un livre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path ("ajoutergenre") }}">Ajouter un genre</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
    <footer>
        <p class="modal-footer fixed-bottom">Litteralys Examen 2 - Janvier 2023 Guillaume Malecha</p>
    </footer>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

        <script
                src="https://code.jquery.com/jquery-3.4.1.min.js"
                integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
                crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/2a28a73a8e.js" crossorigin="anonymous"></script>

    {% endblock %}
</html>
